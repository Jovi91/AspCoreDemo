@model IEnumerable<FirstAspCoreProject.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-right">
           @*/ @Html.ActionLink("Create New Category","Create","Category") *@
            <a class="btn btn-primary" asp-area="" asp-action="Create" asp-controller="Category">
                <i class="fas fa-plus"></i> &nbsp;
            Create New Category</a>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>

                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td with="30%">@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-50 btn-group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary m-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger m-1">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>


                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No category exists</p>
    }


</div>
