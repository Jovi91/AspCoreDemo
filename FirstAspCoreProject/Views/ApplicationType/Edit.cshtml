@model FirstAspCoreProject.Models.ApplicationType
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <h1 class="text-info pb-4">Edit Type</h1>
</div>
<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="mr-2">
            <label asp-for="Name" style="font-size:30px; color:aquamarine; font-family:'Lucida Sans'"></label>
        </div>
        <div class="col">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-success w-100">Applay Changes</button>
        </div>
        <div class="col">
            <a class="btn btn-primary w-100" asp-action="Index">Back</a>
        </div>
    </div>
</form>

@*client-side validation of model annotation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        }
} 