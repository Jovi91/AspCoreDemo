@model IEnumerable<FirstAspCoreProject.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h1 class="text-info"> Type List </h1>
    </div>
    <div class="col text-right">
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus"></i> &nbsp;
            Add new Type
        </a>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Type Name</th>
                <th scope="col"></th>

            </tr>

        </thead>
        <tbody>
            @foreach (var type in Model)
            {
                <tr>
                    <td width="50%">@type.Id</td>
                    <td width="30%">@type.Name</td>
                    <td>
                        <div class="form-group w-75 text-center">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@type.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@type.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <p>There is no Types in database</p>
}

